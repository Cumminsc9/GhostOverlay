        <Button
            Margin="0,12,0,0"
            HorizontalAlignment="Center"
            Click="LoginWithDesktopBrowser_OnClick"
            Content="Login with Bungie" />

        <StackPanel
            x:Name="AuthWaiting"
            Margin="0,24,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Visibility="Collapsed">

            <ProgressRing
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsActive="True" />

            <TextBlock
                Margin="12,0,0,0"
